# Environment variables for USGS River Alert System
# Copy this file to .env_creds and fill in your actual credentials
# Usage: source .env_creds && podman run ...

# SMTP Configuration (Gmail example)
export SMTP_USER="your-email@gmail.com"
export SMTP_PASS="your-gmail-app-password-16-chars"
export SMTP_TO="recipient@example.com"
export SMTP_FROM="your-email@gmail.com"  # Optional, defaults to SMTP_USER

# NWS API Configuration (required for weather data)
export NWS_UA="your-app-name/1.0"
export NWS_CONTACT="your-email@gmail.com"

# Optional: Fly.io deployment password (if using Fly.io)
# export FLYIO_PASS="your-flyio-password"

# Optional: Runtime configuration
# export RUN_INTERVAL_SEC="600"
# export QPF_TTL_HOURS="3"
# export QPF_CACHE="/data/qpf_cache.sqlite"
